#Score : P
#M&M Solution
class Solution {
    public int lengthOfLastWord(String s) {
        s = s.trim();
        int counter = 0;
        if(s.length() == 0){return 0;}
        
        for(int i = s.length() - 1; i > -1; i--)
        {
            if(s.charAt(i) != ' '){counter++;}
            else{return counter;}
        }
        return counter;
    }
}
