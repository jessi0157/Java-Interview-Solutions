Score : P | Easy
//MM solution :
class Solution {
    public boolean isPalindrome(int x) {
        int original = x;
        int reverse = 0;
        int remainder = 0;
        
        
        while(x > 0)
        {
            remainder = x % 10;
            reverse = (reverse * 10) + remainder;
            x /= 10;
        }
        
        return reverse == original;
    }
}
